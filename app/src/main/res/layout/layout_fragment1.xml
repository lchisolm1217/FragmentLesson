<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Fragment 1"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/previous_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_input1"
        android:text="Previous input"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/fragment_input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Fragment 1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_input1"
        android:layout_centerInParent="true"
        android:text="next fragment" />

</RelativeLayout>